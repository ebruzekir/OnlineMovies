@model Emovies.Domain.DTO.AddToShoppingCartDTO
@{
    ViewData["Title"] = "Add to Shopping cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Add Selected Product to User Shopping Card:</h1>


<hr />

<div class="row">
    <div class="col-md-4 m-auto">
        <form asp-action="AddProductToCard" method="post">
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label asp-for="SelectedProduct.M_Name"></label>
                <input disabled asp-for="SelectedProduct.M_Name" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>